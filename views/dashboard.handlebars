<h6>Dashboard</h6>
<h3>Welcome {{firstName}}</h3>
{{#if stories}}

<p>Here are your all stories</p>
{{!-- stories --}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'Do MMMM YYYY, h:mmA'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td><a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a></td>
            <td>
                <form action="/stories/{{_id}}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<p>You have not created any stories yet.</p>
{{/if}}